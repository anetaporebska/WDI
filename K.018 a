 int ile_kawalkow(int t[N]){
    
    bool czy_n=false; 
    for(int i=0; i<N-1; i++){
        if(t[i]==t[i+1]) czy_n=true;
        else {czy_n=false; break;}
    }
    
    if(czy_n) return N; 
     
    for(int i=N-1; i<=1; i--){
         if(podziel(t,i)) return i;
    }
     
     
     return 0;
     
 }
 
 
 
 
