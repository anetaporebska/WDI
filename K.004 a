//Tablica tab jest wypełniona liczbami naturalnymi. Proszę napisać fukcję, która zwraca długość najdłuższego
//spójnego podciągu będącego palindromem złożonym wyłącznie z cyfr nieparzystych. Do funkcji należy przekazać tablicę,
//funkcja powinna zwócić długość najdłuższego znalezionego podciągu lub wartość 0 jeżeli taki podciąg nie istnieje.


const int N=10;

int podciag(int tab[N]){
    
    int dlugosc=0;
    int naj=0;
    int dl=0;
   
    for(int i=0; i<N; i++){
        
        if(tab[i]%2==1){
            dl=1;
            for(int j=i+1; j<N; j++){
                if(tab[j]%2==1) dl++;
                else break;
            }
            
            for(int s=)
            
            for(int k=0; k<=dl-1; k++){
                if(tab[i+k]==tab[dl-k]) dlugosc++;
                else {dl--; break;}
            }
            
            
        }
        if(dlugosc>naj) naj=dlugosc;
        dlugosc=0;
        
        
    }
    
    
    
    
    return naj;
}




int main()
{
    int tab[10]={2,3,1,1,3,1,2,3,5,7};
    
    cout<<podciag(tab);

    return 0;
}
