

#include <iostream>

using namespace std;

const int N=10;

int podciag(int tab[N]){
    int suma_w=0;
    int suma_i=0;
    int dlugosc=0;
    int naj=0;

    for(int i=0; i<N; i++){

       suma_w=tab[i];
       suma_i=i;

       for(int j=i+1;j<N; j++){
           if(tab[j]>tab[j-1]){
               suma_w+=tab[j];
               suma_i+=j;
               if(suma_w==suma_i) dlugosc=j-i+1;

           }
           else {
               if(dlugosc>naj) naj=dlugosc;
               break;


           }

       }

    }




    return naj;
}



int main()
{

    int tab[N]={10,10,10,10,10,1,10,10,10,10};
    cout<<podciag(tab);

    return 0;
}
